electrons.profile = constant
electrons.ux = 0.0
electrons.uy = 0.0
electrons.uz = 0.0
electrons.xmax = 2e-05
electrons.xmin = -2e-05
electrons.ymax = 2e-05
electrons.ymin = -2e-05
electrons.zmin = 0

# geometry
geometry.dims = 3
geometry.prob_hi = 3e-05 3e-05 1.2e-05
geometry.prob_lo = -3e-05 -3e-05 -5.6e-05

